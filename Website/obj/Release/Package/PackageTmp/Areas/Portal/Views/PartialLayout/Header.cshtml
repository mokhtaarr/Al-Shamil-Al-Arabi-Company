@model IEnumerable<App.VM.CategoryVM>
@using App.Static.Resources
@using App.Static.Enums;
@using System.Configuration;

@{
    int lang = (int)ViewBag.lan;
    Layout = null;
    string logo = Request.Cookies["Logo"].Value;
    string path = ConfigurationManager.AppSettings["LocalPath"];

}

<!-- ======= Header ======= -->
<header id="header">
    <div class="container d-flex align-items-center">

        <div class="logo mr-auto">
            <h1 class="text-light"><a href="@Url.Action("Index", "Home", new { area = "Portal"})">
                 <img src="@path/@logo" title="logo" alt="logo"/>
                 </a></h1>
            <!-- Uncomment below if you prefer to use an image logo -->
            <!-- <a href="index.html"><img src="~/Content/Portal/assets/img/logo.png" alt="" class="img-fluid"></a>-->
        </div>

        <nav class="nav-menu d-none d-lg-block">
            <ul>
                <li class="active"><a href="@Url.Action("Index", "Home", new { area = "Portal"})">@Resource.Home</a></li>
                @if (Model != null)
                {
                    foreach (var item in Model)
                    {
                        if (item.AllCategories.Count() == 0)
                        {
                            <li><a href="@Url.Action("Page", "Home", new { area = "Portal", Id = item.Id })">@item.Name</a></li>
                        }
                        else
                        {
                            <li class="drop-down">
                                <a href="@Url.Action("Page", "Home", new { area = "Portal", Id = item.Id })">@item.Name</a>
                                <ul>
                                    @foreach (var subCategory in item.AllCategories)
                                    {
                                        string name = lang == (int)LanuageType.AR ? subCategory.ArName : subCategory.EnName;
                                        <li>
                                            <a href="@Url.Action("Page", "Home", new { area = "Portal", Id = subCategory.Id })">@name</a>
                                        </li>
                                    }
                                </ul>
                            </li>
                        }
                    }
                }

