<!-- ======= Hero Section ======= -->
<section id="hero">
    <div class="container">
        <div class="row d-flex align-items-center">
            <div class=" col-lg-6 py-5 py-lg-0 order-2 order-lg-1 mt-3 mb-5" data-aos="fade-right">
                <h1>@Model.companyWord.Titel</h1>
                <p>@Model.companyWord.Description</p>
                <a href="#about" class="btn-get-started scrollto">@Resource.GetStarted</a>
            </div>
            <div class="col-lg-6 order-1 order-lg-2 hero-img" data-aos="fade-left">
                @if (Model.companyWord.Image != null && Model.companyWord.Image != "")
                {
                    string LiseImages = Model.companyWord.Image.Remove(Model.companyWord.Image.Length - 1);
                    List<string> images = new List<string>();
                    images.AddRange(LiseImages.Split(',').ToList());
                    if (images.Count() > 1)
                    {
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                @for (int i = 0; i < images.Count(); i++)
                                {
                                    if (i == 0)
                                    {
                                        <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@_class"></li>
                                    }
                                    else
                                    {
                                        <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                                    }
                                }
                            </ol>
                            <div class="carousel-inner">
                                @for (int i = 0; i < images.Count(); i++)
                                {
                                    if (i == 0)
                                    {
                                        <div class="carousel-item @_class">
                                            <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="carousel-item">
                                            <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                        </div>
                                    }
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    }
                    else
                    {
                        string img = Model.companyWord.Image.Remove(Model.companyWord.Image.Length - 1);
                        <img src="@path/@img" class="img-fluid" alt="">
                    }
                }
            </div>
        </div>
    </div>
</section><!-- End Hero -->
