<!-- ======= Services Section ======= -->
<section id="services" class="services section-bg">
    <div class="container">

        <div class="section-title">
            <h2 data-aos="fade-in">@Resource.SERVICES</h2>
            <p data-aos="fade-in">
                @(Model.Language == 1 ? Model.services.ArDescription : Model.services.EnDescription )
            </p>
        </div>

        <div class="row">
            @{int data = 1; int _num = 1;}
            @foreach (var item in Model.services.SubServices)
            {
                string dataAos = (data % 2 == 0) ? "fade-right" : "fade-left";
                <div class="col-md-6 d-flex align-items-stretch" data-aos="@dataAos">
                    <div class="card">
                        <div class="card-img">
                            @if (item.Image != null)
                            {
                                string LiseImages = item.Image.Remove(item.Image.Length - 1);
                                List<string> images = new List<string>();
                                images.AddRange(LiseImages.Split(',').ToList());
                                if (images.Count() > 1)
                                {
                                    <div id="SubServices@(_num )" class="carousel slide" data-ride="carousel">
                                        <ol class="carousel-indicators">
                                            @for (int i = 0; i < images.Count(); i++)
                                            {
                                                if (i == 0)
                                                {
                                                    <li data-target="#SubServices@(_num )" data-slide-to="@i" class="@_class"></li>
                                                }
                                                else
                                                {
                                                    <li data-target="#SubServices@(_num )" data-slide-to="@i"></li>
                                                }
                                            }
                                        </ol>
                                        <div class="carousel-inner">
                                            @for (int i = 0; i < images.Count(); i++)
                                            {
                                                if (i == 0)
                                                {
                                                    <div class="carousel-item @_class">
                                                        <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="carousel-item">
                                                        <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                                    </div>
                                                }
                                            }
                                        </div>
                                        <a class="carousel-control-prev" href="#SubServices@(_num )" role="button" data-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Previous</span>
                                        </a>
                                        <a class="carousel-control-next" href="#SubServices@(_num )" role="button" data-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="sr-only">Next</span>
                                        </a>
                                    </div>
                                }
                                else
                                {
                                    string img = item.Image.Remove(item.Image.Length - 1);
                                    <img src="@path/@img" class="img-fluid" alt="">
                                }
                                _num++;
                            }
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a>
                                    @(Model.Language == 1 ? item.ArTitel : item.EnTitel )
                                </a>
                            </h5>
                            <p class="card-text">
                                @(Model.Language == 1 ? item.ArDescription : item.EnDescription )
                            </p>
                            @*<div class="read-more"><a href="#"><i class="icofont-arrow-right"></i> <span>Read More</span></a></div>*@
                        </div>
                    </div>
                </div>
                data++;
            }
        </div>

    </div>
</section><!-- End Services Section -->
<!-- ======= Features Section ======= -->
<section id="features" class="features section-bg">
    <div class="container">
        <div class="section-title">
            <h2 data-aos="fade-in">@Resource.FEATURES</h2>
            <p data-aos="fade-in">
                @(Model.Language == 1 ? Model.features.ArDescription : Model.features.EnDescription )
            </p>
        </div>
        @foreach (var item in Model.features.SubFeatures)
        {
            int num = 1;
            string dataAosR = (data % 2 == 0) ? "fade-right" : "fade-left";
            string dataAosL = dataAosR == "fade-right" ? "fade-left" : "fade-right";
            string dataAosDir = "";
            if (Model.Language != 1)
            {
                dataAosDir = dataAosR == "fade-left" ? "direction: rtl; text-align: right" : "";
            }
            else
            {
                dataAosDir = dataAosR == "fade-left" ? "direction: ltr; text-align: left" : "";
            }

            <div class="row content" style="@dataAosDir">
                <div class="col-md-5" data-aos="@dataAosR">
                    @if (item.Image != null)
                    {
                        string LiseImages = item.Image.Remove(item.Image.Length - 1);
                        List<string> images = new List<string>();
                        images.AddRange(LiseImages.Split(',').ToList());
                        if (images.Count() > 1)
                        {
                            <div id="SubFeatures@(num)" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @for (int i = 0; i < images.Count(); i++)
                                    {
                                        if (i == 0)
                                        {
                                            <li data-target="#SubFeatures@(num)" data-slide-to="@i" class="@_class"></li>
                                        }
                                        else
                                        {
                                            <li data-target="#SubFeatures@(num)" data-slide-to="@i"></li>
                                        }
                                    }
                                </ol>
                                <div class="carousel-inner">
                                    @for (int i = 0; i < images.Count(); i++)
                                    {
                                        if (i == 0)
                                        {
                                            <div class="carousel-item @_class">
                                                <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="@path/@images[i]" alt="First slide">
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="carousel-control-prev" href="#SubFeatures@(num)" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#SubFeatures@(num)" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        }
                        else
                        {
                            string img = item.Image.Remove(item.Image.Length - 1);
                            <img src="@path/@img" class="img-fluid" alt="">
                        }
                        num++;
                    }
                </div>
                <div class="col-md-7 pt-4" data-aos="@dataAosL" style="@dataAosDir">
                    <h3>
                        @(Model.Language == 1 ? item.ArTitel: item.EnTitel)
                    </h3>
                    <p class="font-italic">
                        @(Model.Language == 1 ? item.ArDescription : item.EnDescription)
                    </p>
                </div>
            </div>
            data++;
        }
    </div>
</section><!-- End Features Section -->
<!-- ======= Portfolio Section ======= -->
<section id="portfolio" class="portfolio section-bg">
    <div class="container">
        <div class="section-title">
            <h2 data-aos="fade-in">@Resource.PORTFOLIO</h2>
            <p data-aos="fade-in">
                @(Model.Language == 1 ? Model.portfolio.ArDescription : Model.portfolio.EnDescription )
            </p>
        </div>

        <div class="row">
            <div class="col-lg-12">
                <ul id="portfolio-flters">
                    <li data-filter="*" class="filter-active">@Resource.All</li>
                    @foreach (var item in Model.PortfolioType)
                    {
                        <li data-filter=".@item.EnName">@(Model.Language == 1 ? item.ArName : item.EnName )</li>
                    }
                </ul>
            </div>
        </div>

        <div class="row portfolio-container" data-aos="fade-up">
            @foreach (var PortfolioType in Model.PortfolioType)
            {
                foreach (var item in PortfolioType.SubPortfolios)
                {
                    <div class="col-lg-4 col-md-6 portfolio-item @PortfolioType.EnName">
                        <div class="portfolio-wrap">
                            <img src="@path/@item.Image" class="img-fluid" alt="">
                            <div class="portfolio-links">
                                <a href="@path/@item.Image" data-gall="portfolioGallery" class="venobox" title="@(Model.Language == 1 ? item.ArTitel : item.EnTitel )"><i class="icofont-plus-circle"></i></a>
                                @*<a href="portfolio-details.html" title="More Details"><i class="icofont-link"></i></a>*@
                            </div>
                            <div class="portfolio-info">
                                <h4>@(Model.Language == 1 ? item.ArTitel : item.EnTitel )</h4>
                                <p>@(Model.Language == 1 ? item.EnDescription : item.EnDescription )</p>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>

    </div>
</section><!-- End Portfolio Section -->
<!-- ======= Team Section ======= -->
<section id="team" class="team section-bg">
    <div class="container">
        <div class="section-title">
            <h2 data-aos="fade-in">@Resource.TEAM</h2>
            <p data-aos="fade-in">
                @(Model.Language == 1 ? Model.team.ArDescription: Model.team.EnDescription)
            </p>
        </div>

        <div class="row">
            @{int delay = 0;}
            @for (int i = 0; i < Model.team.TeamMembers.Count(); i++)
            {
                var item = Model.team.TeamMembers.ToList()[i];
                <div class="col-xl-3 col-lg-4 col-md-6">
                    <div class="member" data-aos="fade-up" data-aos-delay="@delay">
                        <div class="pic"><img src="@path/@item.Image" alt=""></div>
                        <h4>@(Model.Language == 1 ? item.ArName : item.ArName )</h4>
                        <span>@(Model.Language == 1 ? item.ArJob : item.EnJob )</span>
                        <div class="social">
                            <a href="@item.twitter"><i class="icofont-twitter"></i></a>
                            <a href="@item.facebook"><i class="icofont-facebook"></i></a>
                            <a href="@item.instagram"><i class="icofont-instagram"></i></a>
                            <a href="@item.linkedin"><i class="icofont-linkedin"></i></a>
                        </div>
                    </div>
                </div>
                delay = delay + 100;
            }
        </div>
    </div>
</section><!-- End Team Section -->
<!-- ======= Contact Section ======= -->
<section id="contact" class="contact section-bg">
    <div class="container">

        <div class="section-title">
            <h2 data-aos="fade-in">@Resource.CONTACT</h2>
            <p data-aos="fade-in">@(Model.contact.Description)</p>
        </div>

        <div class="row">

            <div class="col-lg-6">

                <div class="row">
                    <div class="col-md-12">
                        <div class="info-box" data-aos="fade-up">
                            <i class="bx bx-map"></i>
                            <h3>@Resource.OurAddress</h3>
                            <p>@Model.contact.Addres</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4" data-aos="fade-up" data-aos-delay="100">
                            <i class="bx bx-envelope"></i>
                            <h3>@Resource.EmailUs</h3>
                            <p>@Model.contact.Email</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="info-box mt-4" data-aos="fade-up" data-aos-delay="100">
                            <i class="bx bx-phone-call"></i>
                            <h3>@Resource.CallUs</h3>
                            <p>@Model.contact.Phone</p>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-lg-6 mt-4 mt-lg-0">
                @*<form id="ContactForm" action="" method="post" role="form" class="php-email-form w-100" data-aos="fade-up">*@
                <form id="ContactForm" action="@Url.Action("SendMail", "ContactUs", new { area="Admin"})" method="post" role="form" class="php-email-form w-100" data-aos="fade-up">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <input type="text" name="name" class="form-control" id="Name" placeholder="@Resource.Name" data-rule="minlen:4" data-msg="@Resource.ValidName" />
                            <div class="validate"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control" name="email" id="Email" placeholder="@Resource.Email" data-rule="email" data-msg="@Resource.ValidEmail" />
                            <div class="validate"></div>
                        </div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="subject" id="Subject" placeholder="@Resource.Subject" data-rule="minlen:4" data-msg="@Resource.ValidSubject" />
                        <div class="validate"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="Body" rows="5" data-rule="required" data-msg="@Resource.ValidMesssage" placeholder="@Resource.Message"></textarea>
                        <div class="validate"></div>
                    </div>
                    <div class="mb-3">
                        <div class="loading">Loading</div>
                        <div class="error-message"></div>
                        <div class="sent-message">@Resource.Mailsuccessfully</div>
                    </div>
                    <div class="text-center"><button type="submit">@Resource.SendMessage</button></div>
                </form>
            </div>

        </div>

    </div>
</section><!-- End Contact Section -->

