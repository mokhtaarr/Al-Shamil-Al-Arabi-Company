                            <a class="side-nav-menu-link" onclick="activeTabe('SubFeatures')" href="@Url.Action("Index","SubFeatures", new { area = "Admin"})">@Resource.SubFeatures</a>
                        </li>
                        <li class="side-nav-menu-item" id="Portfolio">
